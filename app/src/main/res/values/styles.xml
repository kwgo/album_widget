<resources>

    <style name="app_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#1f2229</item>
        <item name="android:colorBackground">#1f2229</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="layer_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="album_name_menu">
        <item name="android:textColor">#B1FFFFFF</item>
        <item name="popupMenuStyle">@style/album_name_menu_popup</item>
    </style>

    <style name="album_name_menu_popup">
        <item name="android:popupBackground">@drawable/album_name_dropdown</item>
    </style>

    <style name="album_name_alert_delete" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#B1FFFFFF</item>
        <item name="android:background">#B1000000</item>
    </style>

    <style name="mini_button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:elevation">16dp</item>
        <item name="android:translationZ">12dp</item>
        <item name="borderWidth">1dp</item>
        <item name="fabSize">mini</item>
        <item name="rippleColor">#ff0000</item>
    </style>

    <style name="normal_button">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:elevation">6dp</item>
        <item name="android:translationZ">12dp</item>
        <item name="borderWidth">5dp</item>
    </style>

    <style name="font_color_seeker">
        <item name="android:alpha">0.70</item>
        <item name="android:color">@android:color/white</item>
    </style>
</resources>
