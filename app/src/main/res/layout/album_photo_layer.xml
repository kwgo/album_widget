<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/album_setting_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ActivityAlbum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:gravity="center">

            <com.jchip.album.ViewAlbumName
                android:id="@+id/album_name_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:alpha="0.70"
                android:background="@drawable/album_name_control"
                android:completionThreshold="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:popupBackground="@drawable/album_name_dropdown"
                android:singleLine="true"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/album_name_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:alpha="0.70"
                android:background="@drawable/album_name_dots_press"
                android:contentDescription="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="center"
                android:src="@drawable/album_name_dots" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="5dp"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/photo_left"
                style="@style/mini_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_margin="2dp"
                android:contentDescription="@null"
                android:src="@drawable/photo_left" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/photo_right"
                style="@style/mini_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_margin="2dp"
                android:contentDescription="@null"
                android:src="@drawable/photo_right" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/photo_delete"
                style="@style/mini_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="2dp"
                android:contentDescription="@null"
                android:src="@drawable/photo_delete" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/photo_flip"
                style="@style/mini_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="2dp"
                android:contentDescription="@null"
                android:src="@drawable/photo_flip" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/photo_rotation"
                style="@style/mini_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="2dp"
                android:contentDescription="@null"
                android:src="@drawable/photo_rotation" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/photo_scale"
                style="@style/mini_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="2dp"
                android:contentDescription="@null"
                android:src="@drawable/photo_fit" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/photo_container_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0.64"
        android:gravity="center">

        <include layout="@layout/album_photo_item" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="0.18"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_weight="0.25"
            android:gravity="start|top"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/album_setting"
                style="@style/normal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_margin="16dp"
                android:contentDescription="@null"
                android:gravity="start|top"
                android:src="@drawable/photo_setting" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_weight="0.25"
            android:gravity="end|bottom"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/font_setting"
                style="@style/normal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="@null"
                android:gravity="end|bottom"
                android:src="@drawable/photo_font" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_weight="0.25"
            android:gravity="start|bottom"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/frame_select"
                style="@style/normal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="@null"
                android:gravity="start|bottom"
                android:src="@drawable/photo_frame" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_weight="0.25"
            android:gravity="end|top"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/photo_add"
                style="@style/normal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_margin="16dp"
                android:contentDescription="@null"
                android:gravity="end"
                android:src="@drawable/photo_add" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>