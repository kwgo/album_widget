<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/album_setting_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ActivityAlbum">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <com.jchip.album.ViewAlbumName
            android:id="@+id/album_name_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:alpha="0.70"
            android:background="@drawable/album_name_control"
            android:completionThreshold="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:popupBackground="@drawable/album_name_dropdown"
            android:singleLine="true"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/album_name_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:alpha="0.70"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:focusedByDefault="true"
            android:src="@drawable/album_name_dots" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/photo_left"
            style="@style/mini_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:src="@drawable/photo_left" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/photo_right"
            style="@style/mini_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:src="@drawable/photo_right" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/photo_delete"
            style="@style/mini_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="2dp"
            android:src="@drawable/photo_delete" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/photo_flip"
            style="@style/mini_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="2dp"
            android:src="@drawable/photo_flip" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/photo_rotation"
            style="@style/mini_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="2dp"
            android:src="@drawable/photo_rotation" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/photo_scale"
            style="@style/mini_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="2dp"
            android:src="@drawable/photo_fit" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/photos_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="4dp">

        <include layout="@layout/photo_item" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_weight="0.25"
            android:gravity="start|top"
            android:orientation="vertical"
            android:paddingBottom="35dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/album_help"
                style="@style/normal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_margin="16dp"
                android:gravity="start|top"
                android:src="@drawable/photo_help" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_weight="0.25"
            android:gravity="end|bottom"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/font_setting"
                style="@style/normal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="end|bottom"
                android:src="@drawable/photo_font" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_weight="0.25"
            android:gravity="start|bottom"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/frame_select"
                style="@style/normal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="start|bottom"
                android:src="@drawable/photo_frame" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_weight="0.25"
            android:gravity="end|top"
            android:orientation="vertical"
            android:paddingBottom="35dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/photo_add"
                style="@style/normal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_margin="16dp"
                android:gravity="end"
                android:src="@drawable/photo_add" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>