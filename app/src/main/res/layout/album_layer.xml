<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ActivityAlbum">

    <com.jchip.album.ViewAlbum
        android:id="@+id/album_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/album_name_control"
        android:completionThreshold="1"
        android:popupBackground="@drawable/album_name_dropdown"
        android:singleLine="true"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/album_name_dots_light"
        android:contentDescription="@null"
        android:onClick="showPopup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/album_photo_fit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@null"
        android:elevation="6dp"
        android:src="@drawable/photo_fit"
        android:translationZ="12dp"
        app:borderWidth="1dp"
        app:fabSize="mini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_name" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/album_photo_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@null"
        android:elevation="6dp"
        android:src="@drawable/photo_delete"
        android:translationZ="12dp"
        app:borderWidth="1dp"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_name" />
    />


    <ImageView
        android:id="@+id/album_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/album_photo"
        app:layout_constraintBottom_toTopOf="@+id/album_photo_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_photo_delete" />

    <EditText
        android:id="@+id/album_font"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/album_photo_font"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/album_photo_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_name" />

    <ImageView
        android:id="@+id/album_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/album_frame"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/album_photo_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_name" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/album_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/white"
        android:contentDescription="@null"
        android:elevation="6dp"
        android:src="@drawable/photo_setting"
        android:translationZ="12dp"
        app:borderWidth="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/album_font_edit"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/album_font_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/white"
        android:contentDescription="@null"
        android:elevation="6dp"
        android:src="@drawable/photo_font"
        android:translationZ="12dp"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/album_frame_add"
        app:layout_constraintStart_toEndOf="@+id/album_setting" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/album_frame_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/white"
        android:contentDescription="@null"
        android:elevation="6dp"
        android:src="@drawable/photo_frame"
        android:translationZ="12dp"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/album_photo_add"
        app:layout_constraintStart_toEndOf="@+id/album_font_edit" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/album_photo_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/white"
        android:contentDescription="@null"
        android:elevation="16dp"
        android:src="@drawable/photo_add"
        android:translationZ="12dp"
        app:borderWidth="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#ff0000" />


</androidx.constraintlayout.widget.ConstraintLayout>